<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_button">
        <item name="android:background">@drawable/login_background</item>
    </style>
    <style name="form_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="form_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:ems">12</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="hintTextColor">@color/patech_secondary</item>
        <item name="android:background">@drawable/edit_text_layout</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="login_register_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserratregular</item>
    </style>
    <style name="default_text_app">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="google_button">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">Sign Up With Google</item>
        <item name="android:drawableLeft">@drawable/google</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:background">@drawable/base_layout</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="image_format">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:src">@drawable/logo_patech</item>
    </style>
    <style name="box_item_data">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/box_layout_home</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="box_item_data_container">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="background">@drawable/base_layout</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="box_item_data_container_container">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/base_layout</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="text_item_data_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="progress_bar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundColor">@color/white_app</item>
        <item name="android:progress">80</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="dialog_style" parent="android:Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>